<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="5dp"
    android:orientation="vertical"
    android:paddingHorizontal="5dp"
    tools:context=".Activities.SmsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewContacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:id="@+id/buttonDeleteMessages"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/black"
            android:text="Delete Cloud Messages"
            android:textColor="@color/white"
            android:visibility="visible" />


        <Switch
            android:paddingHorizontal="10dp"
            android:backgroundTint="@color/ardhisasacolorPrimaryDark"
            android:layout_weight="1"
            android:background="@drawable/rectanglebutton"
            android:id="@+id/canSynchButton"
            android:shadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            android:outlineAmbientShadowColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="Back Up To Cloud" />

    </LinearLayout>



</RelativeLayout>